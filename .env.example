# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Node Environment (development, production, test)
NODE_ENV=development

# Server Port
PORT=3001

# API Base URL (for generating file URLs)
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
API_BASE_URL=http://localhost:3001

# Frontend URL (for CORS configuration)
# Development: http://localhost:5173
# Production: https://yourdomain.com
# For multiple origins, separate with commas: http://localhost:5173,https://yourdomain.com
FRONTEND_URL=http://localhost:5173

# File Upload Limits (in bytes)
# 5MB = 5242880 bytes
MAX_PROFILE_PICTURE_SIZE=5242880
# 10MB = 10485760 bytes
MAX_PORTFOLIO_PICTURE_SIZE=10485760
# Global max file size (10MB)
MAX_FILE_SIZE=10485760

# Request Body Size Limits (in bytes)
# 50MB = 52428800 bytes
MAX_REQUEST_BODY_SIZE=52428800

# Rate Limiting Configuration
# Login Rate Limiting (prevents brute force attacks)
# Window in milliseconds (15 minutes = 900000 ms)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
# Maximum number of login attempts per window
LOGIN_RATE_LIMIT_MAX=5

# Registration Rate Limiting (prevents spam accounts)
# Window in milliseconds (1 hour = 3600000 ms)
REGISTRATION_RATE_LIMIT_WINDOW_MS=3600000
# Maximum number of registrations per window
REGISTRATION_RATE_LIMIT_MAX=3

# General API Rate Limiting (baseline protection for all endpoints)
# Window in milliseconds (15 minutes = 900000 ms)
GENERAL_RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window
GENERAL_RATE_LIMIT_MAX=100
